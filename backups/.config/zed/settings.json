// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  // "ui_font_family": "VictorMono Nerd Font Mono",
  "ui_font_family": "MonoLisa",
  "ui_font_fallbacks": ["FiraCode Nerd Font"],
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "cursor_blink": false,
  "cursor_shape": "bar",
  "load_direnv": "shell_hook",
  "relative_line_numbers": false,
  "vertical_scroll_margin": 0,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "show": "system"
  },
  "inlay_hints": {
    "enabled": true
  },
  "autosave": "on_focus_change",
  // Use the system theme
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "project_panel": {
    "button": true,
    "git_status": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  // Use zed commit editor
  "terminal": {
    "dock": "right",
    "font_family": "MonoLisa",
    "font_fallbacks": ["FiraCode Nerd Font"],
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/.husky",
    "**/.turbo",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/node_modules"
  ],
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "Ruby": ["Brewfile", "Brewfile*"]
  },
  "languages": {
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
    // there is something invalid about this config
    // "Nix": {
    //   "formatter": {
    //     "external": {
    //       "command": "alejandra"
    //     }
    //   }
    // }
  }
}
