// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  // "ui_font_family": "VictorMono Nerd Font Mono",
  "ui_font_family": "MonoLisa",
  "ui_font_fallbacks": ["FiraCode Nerd Font"],
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "cursor_blink": false,
  "cursor_shape": "hollow",
  "load_direnv": "shell_hook",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "show": "system"
  },
  "inlay_hints": {
    "enabled": true
  },
  "autosave": "on_focus_change",
  // Use the system theme
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  // Move all panel to the right
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  // Use zed commit editor
  "terminal": {
    "font_family": "MonoLisa",
    "font_fallbacks": ["FiraCode Nerd Font"],
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "Ruby": ["Brewfile", "Brewfile*"]
  },
  "languages": {
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    },
    "Nix": {
      "formatter": {
        "external": {
          "command": "alejandra"
        }
      }
    }
  }
}
